<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>

        <item name="android:colorBackground">@color/windowBackgroundColor</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>

        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <style name="Widget" />

    <style name="Widget.CardView" parent="CardView">
        <item name="android:layout_marginRight">@dimen/card_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_margin</item>
        <item name="android:layout_marginTop">@dimen/card_margin_half</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_half</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Text" />

    <style name="Text.IntroTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.Title.Inverse">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
