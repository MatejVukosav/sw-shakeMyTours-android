<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:id="@+id/trip_list_item_cardview"
        style="@style/Widget.CardView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/trip_list_item_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="0dp"
                android:paddingTop="8dp">

                <ImageView
                    android:id="@+id/trip_list_item_marker"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    tools:src="@drawable/ic_place_white_24dp" />

                <TextView
                    android:id="@+id/trip_list_item_name"
                    style="@style/Text.Title.Inverse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:paddingLeft="16dp"
                    android:paddingRight="@dimen/card_margin"
                    android:textAlignment="center"
                    android:transitionName="openDetailName"
                    tools:text="Destinati v sdfgsdfg sdfg sdfgsdfg  sdf gsfdg sdqsdf qsdf sdon" />

                <LinearLayout
                    android:id="@+id/trip_list_item_detail_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="16dp"
                    android:gravity="center">


                    <ImageView
                        android:id="@+id/trip_list_item_detail_image"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_navigate_next_white_24dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>