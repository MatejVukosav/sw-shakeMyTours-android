<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="4dp">

    <android.support.v7.widget.CardView
        android:id="@+id/travel_list_item_cardview"
        style="@style/Widget.CardView"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/travel_list_item_progressbar"
                style="@style/Widget.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="visible"
                tools:visibility="visible" />


            <ImageView
                android:id="@+id/travel_list_item_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:transitionName="openDetailImage"
                android:visibility="gone"
                tools:src="@drawable/cheese_1"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/travel_list_item_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:id="@+id/real_time_fragement_list_item_menu_button_holder"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/real_time_fragement_list_item_menu_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_transparent"
                        tools:src="@drawable/ic_check_circle" />

                </LinearLayout>

                <TextView
                    android:id="@+id/travel_list_item_name"
                    style="@style/Text.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:transitionName="openDetailName"
                    tools:text="Destination" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/travel_list_item_border"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_selected_collapse"
                android:orientation="horizontal"
                android:visibility="gone" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>